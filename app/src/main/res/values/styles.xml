<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryDark">#caa437</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="CustomTabPageIndicator.Text" parent="android:TextAppearance.Medium">
    <item name="android:typeface">monospace</item>
</style>
    <style name="pagertab_icon_style">
        <item name="android:background">@drawable/tab_bg_normal</item>
        <item name="apTabBackground">@drawable/tab_bg_normal</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@drawable/tab_color_select</item>
        <item name="android:textAppearance">@style/CustomTabPageIndicator.Text</item>
        <item name="apTabIndicatorColor">@color/black</item>
        <item name="apTabUnderlineColor">#1A000000</item>
        <item name="apTabDividerColor">#00000000</item>
        <item name="apTabShouldExpand">false</item>
        <item name="apTabPaddingLeftRight">8dp</item>
        <item name="apTabPaddingTopBottom">6dp</item>
        <item name="apTabTextSelectColor">@color/black</item>
    </style>
    <!-- name 是Style的名称，parent 继承那个父类样式 -->
    <style name="theme_fullScreen" parent="android:Theme.Black">
        <item name="android:windowNoTitle">true</item> <!-- 设置无标题 -->
        <item name="android:windowFullscreen">?android:windowNoTitle</item>
    </style>

    <style name="TreeNodeStyleCustom">
        <item name="android:paddingLeft">20dp</item>
        <!--<item name="android:showDividers">middle</item>-->
        <!--<item name="android:divider">@android:drawable/divider_horizontal_bright</item>-->
    </style>
</resources>
