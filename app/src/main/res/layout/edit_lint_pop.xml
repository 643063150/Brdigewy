<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/transparent"
    android:gravity="center"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="225dp"
        android:layout_marginRight="225dp"
        android:background="@drawable/pop_bg"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="编辑"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray"></View>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center"
            android:padding="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:text="路线名称:"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/rounded_editview"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textColorHint="#707070"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center"
            android:padding="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:text="路线编号:"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/code"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/rounded_editview"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textColorHint="#707070"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/departlay"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center"
            android:padding="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:text="建立部门:"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/departname"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/rounded_editview"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:focusable="false"
                android:textColorHint="#707070"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/companylay"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center"
            android:padding="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:text="建立单位:"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/companyname"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/rounded_editview"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textColorHint="#707070"
                android:focusable="false"
                android:textSize="13sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray"></View>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:padding="15dp"
                android:text="取消"
                android:textColor="@color/red"
                android:textSize="15dp" />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/light_gray"></View>
            <TextView
                android:id="@+id/popdis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:padding="15dp"
                android:text="确定"
                android:textColor="@color/red"
                android:textSize="15dp" />
    </LinearLayout>
    </LinearLayout>
</LinearLayout>